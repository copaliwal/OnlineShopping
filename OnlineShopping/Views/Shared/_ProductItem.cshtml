@model OnlineShopping.Models.Product


    <div class="col-sm-4">
        <div class="thumbnail border-dark">

            <img src=@Model.ImageUrl alt="..." style="object-fit: contain;width:100%;height:200px;">

            <div class="caption">
                <h3>@Model.Name</h3>
                <h4>@Model.Price ₹</h4>
                <p>
                    <span class="text-right">
                        @Html.ActionLink("Details", "Details", "Products", new { Id = Model.ProductId }, new { @class = "btn btn-info" })
                    </span>
                </p>
            </div>
        </div>
    </div>