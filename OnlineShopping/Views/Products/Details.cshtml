@model OnlineShopping.Models.Product

@{
    ViewBag.Title = "Details";
    var isAuthenticated = !User.Identity.IsAuthenticated;
}

<h3>@Model.Name</h3>

@using (Html.BeginForm("Add", "Cart", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        @Html.Hidden("ProductId", Model.ProductId)

        <div class="row">
            <div class="col-6 col-md-4">
                <img src=@Model.ImageUrl alt="..." style="object-fit: contain;width:100%;height:400px; border:solid;">
            </div>

            <div class="col-12 col-md-8">
                <p>
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

                    <br />
                </p>

                <p>
                    @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.DisplayFor(model => model.Details, new { htmlAttributes = new { @class = "form-control col-md-8" } })

                    <br />
                </p>

                <p>
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.HiddenFor(model => model.Price)

                    @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })

                    <br />
                </p>

                <p>
                    <input type="submit" value="Add to Cart" class="btn btn-primary" disabled="@isAuthenticated" />
                    @if (isAuthenticated)
                    {
                        <h5>Login to Add to Cart!!</h5>
                    }

                </p>
            </div>

        </div>
    </div>
}

