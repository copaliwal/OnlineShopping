@model OnlineShopping.Areas.Admin.ViewModels.UserRoleViewModel

@{
    ViewData["Title"] = "EditUserRole";
}

<h3>Edit UsersRole</h3>

<div>
    <hr />
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.HiddenFor(model => model.UserId)
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Roles)
            </dt>
            <dd class="col-sm-10">
                @foreach (string item in ViewBag.Roles)
                {
                    <input type="checkbox" name="Roles" value="@item" checked="@Model.Roles.Contains(item)" />
                    @item <br />
                }
            </dd>

        </dl>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
